<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:grid="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:weightSum="100">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="20">

        <TextView
            android:id="@+id/sonucText"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="#e3e7ea"
            android:gravity="bottom|end"
            android:hint="0"
            android:padding="16dp"
            android:paddingBottom="32dp"
            android:singleLine="true"
            android:textAppearance="@style/TextAppearance.AppCompat.Headline"
            android:textSize="48sp" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="80">

        <androidx.gridlayout.widget.GridLayout
            android:id="@+id/gridLayout"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            grid:useDefaultMargins="false"
            grid:alignmentMode="alignBounds"
            grid:columnCount="7"
            grid:rowCount="11">

            <Button
                android:id="@+id/buttonLog"
                android:backgroundTint="#3F51B5"
                android:text="@string/log"
                android:textStyle="bold"
                grid:layout_column="0"
                grid:layout_columnWeight="1"
                grid:layout_row="0"
                grid:layout_rowWeight="1" />

            <Button
                android:id="@+id/buttonSin"
                android:backgroundTint="#3F51B5"
                android:src="@android:drawable/ic_input_delete"
                android:text="sin"
                grid:layout_column="2"
                grid:layout_columnWeight="1"
                grid:layout_row="0"
                grid:layout_rowWeight="1" />

            <Button
                android:id="@+id/buttonCos"
                android:backgroundTint="#3F51B5"
                android:text="cos"
                grid:layout_column="4"
                grid:layout_columnWeight="1"
                grid:layout_row="0"
                grid:layout_rowWeight="1" />

            <Button
                android:background="@drawable/shape"
                android:text="x"
                grid:layout_row="0"
                grid:layout_column="6"
                grid:layout_columnWeight="1"
                grid:layout_rowWeight="1"
                style="@style/calcAction"/>

            <View
                grid:layout_gravity="fill_horizontal"
                android:layout_height="1dp"
                grid:layout_row="1"
                grid:layout_column="0"
                grid:layout_columnSpan="7"
                android:background="#eee"/>

            <Button
                android:id="@+id/button7"
                android:backgroundTint="#009688"
                android:text="7"
                grid:layout_column="0"
                grid:layout_columnWeight="1"
                grid:layout_row="2"
                grid:layout_rowWeight="1" />

            <Button
                android:id="@+id/button8"
                android:backgroundTint="#009688"
                android:text="8"
                grid:layout_column="2"
                grid:layout_columnWeight="1"
                grid:layout_row="2"
                grid:layout_rowWeight="1" />

            <Button
                android:id="@+id/button9"
                android:backgroundTint="#009688"
                android:text="9"
                grid:layout_column="4"
                grid:layout_columnWeight="1"
                grid:layout_row="2"
                grid:layout_rowWeight="1" />

            <Button
                android:background="@drawable/shape"
                android:text="-"
                grid:layout_row="2"
                grid:layout_column="6"
                style="@style/calcAction"
                grid:layout_columnWeight="1"
                grid:layout_rowWeight="1"/>


            <View
                grid:layout_gravity="fill_horizontal"
                android:layout_height="1dp"
                grid:layout_row="3"
                grid:layout_column="0"
                grid:layout_columnSpan="7"
                android:background="#eee"/>

            <Button

                android:id="@+id/button4"
                android:backgroundTint="#009688"
                android:text="4"
                grid:layout_column="0"
                grid:layout_columnWeight="1"
                grid:layout_row="4"
                grid:layout_rowWeight="1" />

            <Button
                android:id="@+id/button5"
                android:backgroundTint="#009688"
                android:text="5"
                grid:layout_column="2"
                grid:layout_columnWeight="1"
                grid:layout_row="4"
                grid:layout_rowWeight="1" />

            <Button
                android:id="@+id/button6"
                android:backgroundTint="#009688"
                android:text="6"
                grid:layout_column="4"
                grid:layout_columnWeight="1"
                grid:layout_row="4"
                grid:layout_rowWeight="1" />

            <Button
                android:background="@drawable/shape"
                android:text="+"
                grid:layout_row="4"
                grid:layout_column="6"
                style="@style/calcAction"
                grid:layout_columnWeight="1"
                grid:layout_rowWeight="1"/>

            <View
                grid:layout_gravity="fill_horizontal"
                android:layout_height="1dp"
                grid:layout_row="7"
                grid:layout_column="0"
                grid:layout_columnSpan="7"
                android:background="#eee"/>


            <Button
                android:id="@+id/button1"
                android:backgroundTint="#009688"
                android:text="1"
                grid:layout_column="0"
                grid:layout_columnWeight="1"
                grid:layout_row="6"
                grid:layout_rowWeight="1" />

            <Button
                android:id="@+id/button2"
                android:backgroundTint="#009688"
                android:text="2"
                grid:layout_column="2"
                grid:layout_columnWeight="1"
                grid:layout_row="6"
                grid:layout_rowWeight="1" />

            <Button
                android:id="@+id/button3"
                android:backgroundTint="#009688"
                android:text="3"
                grid:layout_column="4"
                grid:layout_columnWeight="1"
                grid:layout_row="6"
                grid:layout_rowWeight="1" />


            <Button
                android:id="@+id/buttonEquals"
                android:backgroundTint="#FF5722"
                android:gravity="center_vertical|center_horizontal"
                android:padding="8dp"
                android:text="="
                android:textAppearance="@style/TextAppearance.AppCompat.Large"
                android:textColor="@color/primary_material_light"
                android:textSize="22sp"
                android:textStyle="bold"
                grid:layout_column="6"
                grid:layout_columnWeight="1"
                grid:layout_row="8"
                grid:layout_rowWeight="1" />


            <Button
                android:id="@+id/button0"
                android:backgroundTint="#009688"
                android:text="0"
                grid:layout_column="2"

                grid:layout_columnWeight="1"
                grid:layout_row="8"
                grid:layout_rowWeight="1" />

            <Button
                android:id="@+id/buttonMinus"
                android:backgroundTint="#3F51B5"
                android:text="-"
                grid:layout_column="0"

                grid:layout_columnWeight="1"
                grid:layout_row="8"
                grid:layout_rowWeight="1" />

            <Button
                android:id="@+id/buttonPlus"
                android:backgroundTint="#3F51B5"
                android:text="+"
                grid:layout_column="4"
                grid:layout_columnWeight="1"
                grid:layout_row="8"
                grid:layout_rowWeight="1" />

            <Button
                android:id="@+id/buttonDivide"
                android:backgroundTint="#3F51B5"
                android:text="/"
                grid:layout_column="6"
                grid:layout_columnWeight="1"
                grid:layout_row="4"
                grid:layout_rowWeight="1" />

            <Button
                android:id="@+id/buttonX"
                android:backgroundTint="#3F51B5"
                android:text="x"
                grid:layout_column="6"
                grid:layout_columnWeight="1"
                grid:layout_row="6"
                grid:layout_rowWeight="1" />

            <Button
                android:id="@+id/buttonSquareRoot"
                android:backgroundTint="#3F51B5"
                android:text="^"
                grid:layout_column="6"
                grid:layout_columnWeight="1"
                grid:layout_row="2"
                grid:layout_rowWeight="1" />

            <Button
                android:id="@+id/buttonMultiply"
                android:backgroundTint="#3F51B5"
                android:text="x^2"
                grid:layout_column="6"
                grid:layout_columnWeight="1"
                grid:layout_row="0"
                grid:layout_rowWeight="1" />

            <Button
                android:id="@+id/buttonAC"
                android:backgroundTint="#F44336"
                android:text="AC"
                grid:layout_column="0"
                grid:layout_columnWeight="1"
                grid:layout_row="9"
                grid:layout_rowWeight="1" />

            <Button
                android:id="@+id/buttonFactorial"
                android:backgroundTint="#3F51B5"
                android:text="x!"
                grid:layout_column="2"
                grid:layout_columnWeight="1"
                grid:layout_row="9"
                grid:layout_rowWeight="1" />

            <Button
                android:id="@+id/buttonXSquare"
                android:backgroundTint="#3F51B5"
                android:text="√"
                grid:layout_column="4"
                grid:layout_columnWeight="1"
                grid:layout_row="9"
                grid:layout_rowWeight="1" />

            <Button
                android:id="@+id/buttonPercent"
                android:backgroundTint="#3F51B5"
                android:text="%"
                grid:layout_column="6"
                grid:layout_columnWeight="1"
                grid:layout_row="9"
                grid:layout_rowWeight="1" />

            <Button
                android:id="@+id/buttonsolpar"
                android:backgroundTint="#FF5722"
                android:text="("
                grid:layout_column="0"
                grid:layout_columnWeight="1"
                grid:layout_columnSpan="2"
                grid:layout_row="10"
                grid:layout_rowWeight="1" />

            <Button
                android:id="@+id/buttonsagpar"
                android:backgroundTint="#FF5722"
                android:text=")"
                grid:layout_column="2"
                grid:layout_columnSpan="2"
                grid:layout_columnWeight="1"
                grid:layout_row="10"
                grid:layout_rowWeight="1" />

            <Button
                android:id="@+id/geriall"
                android:backgroundTint="#E91E63"
                android:text="Önceki"
                grid:layout_column="4"
                grid:layout_columnSpan="2"
                grid:layout_columnWeight="1"
                grid:layout_row="10"
                grid:layout_rowWeight="1" />

            <Button
                android:id="@+id/silme"
                android:backgroundTint="#E91E63"
                android:text="sil"
                grid:layout_column="5"
                grid:layout_columnSpan="2"
                grid:layout_columnWeight="1"
                grid:layout_row="10"
                grid:layout_rowWeight="1" />
            <View
                grid:layout_gravity="fill_horizontal"
                android:layout_height="1dp"
                grid:layout_row="5" grid:layout_column="0" grid:layout_columnSpan="7"
                android:background="#eee"/>


        </androidx.gridlayout.widget.GridLayout>

    </LinearLayout>

</LinearLayout>